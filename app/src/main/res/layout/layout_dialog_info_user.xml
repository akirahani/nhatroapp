<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/bg_all_search_customer">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/back_title_search_customer"
        android:text="Thông tin tài khoản"/>

    <TextView
        android:fontFamily="@font/svn_p_s_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/tenTaiKhoan"
        android:singleLine="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/tenDayDu"
        android:singleLine="true"
        android:fontFamily="@font/svn_p_s_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@null"/>
    <TextView
        android:fontFamily="@font/svn_p_s_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/sdtTaiKhoan"
        android:singleLine="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@null"/>

</LinearLayout>