<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@color/cardThietBi"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/cardThietBi"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            >
            <CheckBox
                android:id="@+id/checkMulti"
                android:layout_centerHorizontal="true"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_toRightOf="@+id/checkMulti"
                android:id="@+id/tenPhongTrong"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:layout_toRightOf="@+id/tenPhongTrong"
                android:id="@+id/dayTrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_toRightOf="@+id/tenPhongTrong"
                android:id="@+id/tangTrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/tacVuTrong"
                android:layout_toRightOf="@+id/dayTangTrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sua"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>