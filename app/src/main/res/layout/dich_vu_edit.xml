<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".dich_vu.DichVu">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/rightToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:backgroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_back"
                        android:id="@+id/thoat">
                    </ImageView>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/thoat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ten"
                        android:text="Thoát"
                        android:paddingLeft="5dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/centerToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="10dp">
                    >
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_logo"
                        android:backgroundTint="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leftToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    >

                    <ImageView
                        android:id="@+id/thongbao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_alert"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <!-- Tiêu đề dịch vụ  -->
        <RelativeLayout
            android:id="@+id/tieuDeDichVu"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="9dp">

            <ImageView
                android:id="@+id/imageDichVu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dichvu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageDichVu"
                android:textStyle="bold"
                android:lineHeight="22dp"
                android:paddingLeft="8dp"
                android:paddingTop="18dp"
                android:text="quản lí dịch vụ nhà trọ"
                android:textAllCaps="true"
                android:textColor="@color/textQuanLyChung"
                android:textSize="18dp" />
        </RelativeLayout>
        <!-- mục thiết bị   -->
        <RelativeLayout
            android:id="@+id/tieuDeThietBi"
            android:layout_below="@+id/tieuDeDichVu"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/khoanthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/demuc" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiết bị"
                android:textAllCaps="true"
                android:paddingTop="3dp"
                android:paddingLeft="14dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:textSize="16dp"
                android:lineHeight="19dp" />
        </RelativeLayout>
        <!-- danh sách thiết bị -->
        <RelativeLayout
            android:id="@+id/tHead"
            android:layout_below="@+id/tieuDeThietBi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TextView
                android:id="@+id/tieuDeTenThietBi"
                android:text="Tên"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tieuDeGiaThietBi"
                android:text="Giá"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tacVuThietBi"
                android:paddingRight="10dp"
                android:text="Tác vụ"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/formCapNhat"
            android:layout_below="@+id/tHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/cardThietBi">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tenDichVuAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    android:layout_below="@+id/tieuDeThietBiAdd"
                    >
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:paddingLeft="6dp"
                            android:text="Tên thiết bị: ">
                        </TextView>
                        <EditText
                            android:id="@+id/tenThietBiAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null">
                        </EditText>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    app:cardCornerRadius="8dp"
                    android:layout_below="@+id/tenDichVuAdd">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="6dp"
                            android:text="Giá hàng tháng: "
                            android:textStyle="bold"
                            android:textColor="@color/black">
                        </TextView>
                        <EditText
                            android:id="@+id/giaThietBiAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:background="@null">
                        </EditText>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="21dp"
                android:layout_below="@+id/giaThietBiAdd">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    >
                    <TextView
                        android:background="@drawable/gradient_back"
                        android:id="@+id/backDichVu"
                        android:paddingLeft="45dp"
                        android:paddingRight="45dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Quay lại"
                        android:textAllCaps="true">
                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:id="@+id/capNhat"
                        android:background="@drawable/gradient_add"
                        android:paddingLeft="45dp"
                        android:paddingRight="45dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cập nhật"
                        android:textAllCaps="true">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Danh sách dịch vụ  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listThietBi"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/formCapNhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:layout_below="@+id/listThietBi"
            android:id="@+id/themDichVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/them">

        </ImageView>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>