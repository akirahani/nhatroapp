<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_dich_vu_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/khungNgoai">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context=".dich_vu.DichVu">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/quayLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/thoat"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/quaylaitrang"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/ten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/thoat"
                        android:paddingLeft="5dp"
                        android:text="Quay lại"
                        android:fontFamily="@font/svn_p_s_regular"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/centerToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="10dp">
                    >
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_logo"
                        android:backgroundTint="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leftToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    >

                    <ImageView
                        android:id="@+id/menuDanhMuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bar"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <!-- Tiêu đề dịch vụ  -->
        <RelativeLayout
            android:id="@+id/tieuDeDichVu"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/rowServiceEdit"
                android:orientation="horizontal"
                android:elevation="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/imageServiceEdit"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </FrameLayout>

                <TextView
                    android:id="@+id/textDichVuAdd"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingLeft="8dp"
                    android:fontFamily="@font/svn_p_s_bold"
                    android:text="quản lí dịch vụ nhà trọ"
                    android:textAllCaps="true"
                    android:textColor="@color/textQuanLyChung"
                    android:textSize="18dp" />
            </LinearLayout>
            <TextView
                android:layout_below="@+id/rowServiceEdit"
                android:background="@color/khungNgoai"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>
        <!-- mục thiết bị   -->
        <RelativeLayout
            android:id="@+id/tieuDeThietBi"
            android:layout_below="@+id/tieuDeDichVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/khoanthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/demuc" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiết bị"
                android:fontFamily="@font/svn_p_s_bold"
                android:textAllCaps="true"
                android:paddingTop="3dp"
                android:paddingLeft="14dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:lineHeight="19dp" />
        </RelativeLayout>
        <!-- danh sách thiết bị -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/formCapNhat"
            android:background="@color/white"
            android:layout_below="@+id/tieuDeThietBi"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/tHead"
                android:layout_below="@+id/tieuDeThietBi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">
                <TextView
                    android:id="@+id/tieuDeTenThietBi"
                    android:text="Tên"
                    android:fontFamily="@font/svn_p_s_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tieuDeGiaThietBi"
                    android:text="Giá"
                    android:fontFamily="@font/svn_p_s_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tacVuThietBi"
                    android:paddingRight="10dp"
                    android:text="Tác vụ"
                    android:fontFamily="@font/svn_p_s_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/tHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="13dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cardThietBi">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/tenDichVuAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        android:layout_below="@+id/tieuDeThietBiAdd">
                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:paddingLeft="6dp"
                                android:fontFamily="@font/svn_p_s_bold"
                                android:text="Tên thiết bị: ">
                            </TextView>
                            <EditText
                                android:id="@+id/tenThietBiEdit"
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/svn_p_s_regular"
                                android:textSize="14sp">
                            </EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        app:cardCornerRadius="8dp"
                        android:layout_below="@+id/tenDichVuAdd">
                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="6dp"
                                android:fontFamily="@font/svn_p_s_bold"
                                android:text="Giá hàng tháng: "
                                android:textStyle="bold"
                                android:textColor="@color/black">
                            </TextView>
                            <EditText
                                android:id="@+id/giaThietBiEdit"
                                android:singleLine="true"
                                android:fontFamily="@font/svn_p_s_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:background="@null"
                                android:textSize="14sp">
                            </EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginBottom="21dp"
                    android:layout_below="@+id/giaThietBiEdit">
                    <androidx.cardview.widget.CardView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        >
                        <TextView
                            android:background="@drawable/gradient_back"
                            android:id="@+id/backDichVu"
                            android:paddingLeft="35dp"
                            android:paddingRight="35dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/svn_p_s_bold"
                            android:text="Quay lại"
                            android:textAllCaps="true">
                        </TextView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        android:layout_alignParentRight="true"
                        >
                        <TextView
                            android:id="@+id/capNhat"
                            android:background="@drawable/gradient_add"
                            android:paddingLeft="35dp"
                            android:paddingRight="35dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/svn_p_s_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cập nhật"
                            android:textAllCaps="true">
                        </TextView>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!-- Danh sách dịch vụ  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listThietBi"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/formCapNhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header_layout"
        app:menu="@menu/drawer_view" />

</androidx.drawerlayout.widget.DrawerLayout>