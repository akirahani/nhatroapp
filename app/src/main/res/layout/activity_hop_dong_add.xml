                                android:layout_height="wrap_content"
                                android:paddingLeft="6dp"
                                android:text="Họ và tên: "
                                android:textColor="@color/black"></TextView>

                            <EditText
                                android:id="@+id/tenDaiDienText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
